{
  "name": "White Xbox Buttons",
  "author": "Akaza Renn",
  "target": "Other",
  "version": "v1.1",
  "manifest_version": 5,
  "patches": {
    "Brand icon": {
      "type": "dropdown",
      "default": "Original",
      "values": {
        "Original": {},
        "Steam Deck": {
          "sd_steam_button.css": ["SP", "QuickAccess"]
        },
        "Steam Controller": {
          "sc_steam_button.css": ["SP", "QuickAccess"]
        },
        "Steam Controller with Deck Menu Button": {
          "sd_button_menu.css": ["SP", "QuickAccess"]
        },
        "Nintendo": {
          "switchpro_button_home.css": ["SP", "QuickAccess"]
        },
        "PlayStation": {
          "ps4_button_logo.css": ["SP", "QuickAccess"]
        },
        "XBOX": {
          "xbox_button_logo.css": ["SP", "QuickAccess"]
        }
      }
    },
    "Apply to Xbox / Nintendo style controllers": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "Yes": {
          "abxy.css": ["SP", "QuickAccess"]
        },
        "No": {}
      }
    },
    "Apply to PS controllers": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "Yes": {
          "ps.css": ["SP", "QuickAccess"]
        },
        "No": {}
      }
    }
  }
}
